@page "/GameOver"
<style>
    body {
        font-family: 'Lilita One', cursive;
    }

    .container {
        width: 50%;
        padding-top: 10%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
</style>

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Lilita+One&display=swap" rel="stylesheet">

<div class="container">
    @*Show the fianl winner*@
    <h1>GAME OVER</h1>
    <div class="row m-2">
        <h2 style="color: #0094ff; font-size:150px">@Game.finalWinner.name</h2>
    </div>
    <div class="row m-1">
        <h2>is the winner!</h2>
    </div>

    <div class="row" style="width: 80%">
        @for (int i = 0; i < Game.players.Count; i++)
        {
            int playerIndex = i;
            Player player = Game.players[playerIndex];

            <div class="col-12">
                <div class="row alert alert-secondary align-items-center py-1 px-6" style="@(player.status == PlayerStatus.winner ? "font-weight: bold; color: #0094ff; " : "")">
                    <h4>@player.name: $@player.chip</h4>
                </div>

            </div>
        }
    </div>
    <div class="row justify-content-center">
        <button class="btn btn-primary mt-4 mb-lg-5" @onclick="PlayAgain">PLAY AGAIN</button>
    </div>

</div>

@inject NavigationManager NavigationManager

@code {
    
    /*Link to the index page
    *Called by PLay Again button
    *No parameters
    *No return
    */
    private void PlayAgain()
    {
        NavigationManager.NavigateTo("/");
    }
}
